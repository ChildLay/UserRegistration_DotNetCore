@model IEnumerable<UserRegistration.Models.User>
@{
    Layout = null;
}
<script src="/lib/jquery/dist/jquery.min.js"></script>
<script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />


<div class="container">


    <div class="card my-md-5" style="min-width:800px;">
        <div class="card-header text-center">
            <div class="text-right">
                @Html.ActionLink("+ Add User", "Create", "User", null, htmlAttributes: new { id = "btnAddUser", @class = "btn btn-primary" })
            </div>
            <h5>List of Registration Users</h5>

        </div>

        <div class="card-body" id="usertb">
            <script src="~/js/site.js" asp-append-version="true"></script>
        
            <script type="text/javascript">
           var strdata = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model));
            displayItems(strdata);

            </script>

        </div>
    </div>

</div>

